{
    "swagger": "2.0",
    "basePath": "/",
    "paths": {
        "/auth/login": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                },
                "operationId": "user login",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/auth_details"
                        }
                    }
                ],
                "tags": [
                    "auth"
                ]
            }
        },
        "/auth/logout": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                },
                "operationId": "logout a user",
                "tags": [
                    "auth"
                ]
            }
        },
        "/job/info": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/job"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "List all jobs",
                "operationId": "List of jobs for the user",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "job"
                ]
            }
        },
        "/job/submit": {
            "post": {
                "responses": {
                    "201": {
                        "description": "New Job Created."
                    }
                },
                "summary": "Creates a new Analytics job",
                "operationId": "create a new analytics job",
                "parameters": [
                    {
                        "name": "file",
                        "in": "formData",
                        "type": "file",
                        "required": true
                    },
                    {
                        "name": "framework",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Framework for the job"
                    },
                    {
                        "name": "name",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Name of the job"
                    }
                ],
                "consumes": [
                    "multipart/form-data"
                ],
                "tags": [
                    "job"
                ]
            }
        },
        "/job/{job_id}/info": {
            "parameters": [
                {
                    "in": "path",
                    "description": "The Job identifier",
                    "name": "job_id",
                    "required": true,
                    "type": "integer"
                }
            ],
            "get": {
                "responses": {
                    "404": {
                        "description": "Job not found."
                    },
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/job"
                        }
                    }
                },
                "summary": "Retrieve job info by Id",
                "operationId": "Retrieve job info by Id",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "job"
                ]
            }
        },
        "/job/{job_id}/result": {
            "parameters": [
                {
                    "in": "path",
                    "description": "The Job identifier",
                    "name": "job_id",
                    "required": true,
                    "type": "integer"
                }
            ],
            "get": {
                "responses": {
                    "404": {
                        "description": "Job not found."
                    },
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/job"
                        }
                    }
                },
                "summary": "Retrieve job result by Job ID",
                "operationId": "Retrieve job result by Job Id",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "job"
                ]
            }
        },
        "/topic/": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/topic_details"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "List all available topics",
                "operationId": "list of available topics",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "topic"
                ]
            }
        },
        "/topic/create": {
            "post": {
                "responses": {
                    "201": {
                        "description": "New Kafka topic Created."
                    }
                },
                "summary": "Creates a new Kafka Topic",
                "operationId": "create a new Kafka topic",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/topic_details"
                        }
                    }
                ],
                "tags": [
                    "topic"
                ]
            }
        },
        "/topic/{topic_name}/schema": {
            "parameters": [
                {
                    "in": "path",
                    "description": "Topic name",
                    "name": "topic_name",
                    "required": true,
                    "type": "string"
                }
            ],
            "get": {
                "responses": {
                    "404": {
                        "description": "Topic not found."
                    },
                    "200": {
                        "description": "Success",
                        "schema": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/topic_schema"
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Topic Schema returned."
                    }
                },
                "summary": "Return the scheme of a kafka topic",
                "operationId": "return the schema of a kafka topic",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "topic"
                ]
            }
        },
        "/user/": {
            "post": {
                "responses": {
                    "201": {
                        "description": "User successfully created."
                    }
                },
                "summary": "Creates a new User",
                "operationId": "create a new user",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    }
                ],
                "tags": [
                    "user"
                ]
            }
        },
        "/user/{public_id}": {
            "parameters": [
                {
                    "in": "path",
                    "description": "The User identifier",
                    "name": "public_id",
                    "required": true,
                    "type": "string"
                }
            ],
            "get": {
                "responses": {
                    "404": {
                        "description": "User not found."
                    },
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    }
                },
                "summary": "get a user given its identifier",
                "operationId": "get a user",
                "parameters": [
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "user"
                ]
            }
        }
    },
    "info": {
        "title": "SECAID REST SERVER",
        "version": "0.1a",
        "description": "A WIP backend rest server for SE-CAID"
    },
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json"
    ],
    "tags": [
        {
            "name": "user",
            "description": "user related operations"
        },
        {
            "name": "auth",
            "description": "authentication related operations"
        },
        {
            "name": "topic",
            "description": "Kafka topics related operations"
        },
        {
            "name": "job",
            "description": "Analytics job related operations"
        }
    ],
    "definitions": {
        "user": {
            "required": [
                "email",
                "password",
                "username"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "description": "user email address"
                },
                "username": {
                    "type": "string",
                    "description": "user username"
                },
                "password": {
                    "type": "string",
                    "description": "user password"
                },
                "public_id": {
                    "type": "string",
                    "description": "user Identifier"
                }
            },
            "type": "object"
        },
        "auth_details": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "description": "The email address"
                },
                "password": {
                    "type": "string",
                    "description": "The user password "
                }
            },
            "type": "object"
        },
        "topic_details": {
            "required": [
                "topic_name",
                "topic_schema"
            ],
            "properties": {
                "topic_name": {
                    "type": "string",
                    "description": "Kafka Topic name"
                },
                "topic_schema": {
                    "type": "string",
                    "description": "Kafka Topic Avro Schema"
                },
                "partitions": {
                    "type": "integer",
                    "description": "Number of partitions for the Kafka topic",
                    "default": 1
                },
                "replication_factor": {
                    "type": "integer",
                    "description": "Replication factor for the Kafka topic",
                    "default": 1
                }
            },
            "type": "object"
        },
        "topic_schema": {
            "required": [
                "topic_schema"
            ],
            "properties": {
                "topic_schema": {
                    "type": "string",
                    "description": "Kafka Topic Avro Schema"
                }
            },
            "type": "object"
        },
        "job": {
            "required": [
                "job_framework",
                "job_name"
            ],
            "properties": {
                "job_name": {
                    "type": "string",
                    "description": "Job name"
                },
                "job_framework": {
                    "type": "string",
                    "description": "Framework to run the job on"
                }
            },
            "type": "object"
        }
    },
    "responses": {
        "ParseError": {
            "description": "When a mask can't be parsed"
        },
        "MaskError": {
            "description": "When any error occurs on mask"
        }
    }
}